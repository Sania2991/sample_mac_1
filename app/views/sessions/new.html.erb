<!-- p_293 -->
<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <!-- почитать подробней на стр. 292 -->
    <!-- :session, url: login_path - позволет нам сделать форму входа и -->
    <!-- и отправить в sessions_controller.rb -->
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <!-- p_335: Добавление флажка "Запомни меня" для сохр. статуса пользов.-->
      <!-- класс: checkbox inline - в Bootstrap служат для размещ. в 1 линию-->
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>


      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>